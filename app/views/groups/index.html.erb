<div class="row">

  <div class="col-md-6">
    <h1>Hi <%= @user.first_name %> <%= @user.last_name %> </h1>
    Here are the organizations you may join:
    <% @groups.each do |group| %>
      <h2>
        <a href="/groups/<%= group.id %>"><%= group.name %></a>
        <% if group.user.id == @user.id%>
          | <a href="/groups/<%= group.id %>" data-method='delete'>delete</a>
        <% end %>
      </h2>
      <p>Members: <%= group.members.count %></p>
      <p><%= group.description %></p>
    <% end %>
  </div>

  <div class="col-md-6">
    <h3>Create a new organization:</h3>
    <form action="/groups" method="post" role="form">
      <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
      <p>
        <label for="name">Org Name:</label>
        <input type="text" id='name' class="form-control" name="group[name]" placeholder="Enter group name">
      </p>
      <p>
        <label for="desc">Description</label>
        <textarea id='desc' class="form-control" name="group[description]" placeholder="Enter group description"></textarea>
      </p>
      <button type="submit" class="btn btn-default pull-right">Create</button>
    </form>
  </div>

</div>
